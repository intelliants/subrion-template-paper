<?xml version="1.0" encoding="utf-8"?>
<module type="template" name="paper">
    <title>Paper</title>
    <summary>Template for Subrion Articles Script</summary>
    <author>Gleb Surinov</author>
    <contributor>Intelliants LLC</contributor>
    <version>1.0.0</version>
    <date>2017-04-01</date>
    <compatibility>4.1.0</compatibility>

    <layout>
        <position menu="1" movable="0">account</position>
        <position menu="1" movable="0">mainmenu</position>

        <position>inventory</position>
        <position>teaser</position>
        <position>top_categories</position>
        <position>verytop</position>
        <position>top</position>
        <position>bottom</position>
        <position>verybottom</position>
        <position>copyright</position>
        <position>flyout</position>

        <section name="content">
            <position width="9">center</position>
            <position fixed="1">right</position>
        </section>
        <section name="footer-blocks">
            <position width="3">footer1</position>
            <position width="3">footer2</position>
            <position width="3">footer3</position>
            <position width="3">footer4</position>
        </section>
    </layout>

    <configgroup name="template_paper">Template</configgroup>

    <config group="template_paper"
            type="divider"
            order="3000">General</config>
    <config group="template_paper"
            name="custom_colors"
            type="radio"
            order="3002"
            values="1,0"
            description="Enable custom colors and backgrounds">0</config>
    <config group="template_paper"
            name="custom_color_body_bg"
            type="colorpicker"
            order="3003"
            description="Body background">#fff</config>
    <config group="template_paper"
            name="custom_color_text"
            type="colorpicker"
            order="3004"
            description="Text color">#333333</config>
    <config group="template_paper"
            name="custom_color_headings"
            type="colorpicker"
            order="3005"
            description="Headings color">#333333</config>
    <config group="template_paper"
            name="custom_color_link"
            type="colorpicker"
            order="3006"
            description="Link color">#38b7ea</config>
    <config group="template_paper"
            name="custom_color_link_hover"
            type="colorpicker"
            order="3007"
            description="Link hover color">#1490c1</config>

    <config group="template_paper"
            type="divider"
            order="3100">Inventory bar</config>
    <config group="template_paper"
            name="search_inventory"
            type="radio"
            order="3101"
            values="1,0"
            description="Show search in inventory">0</config>
    <config group="template_paper"
            name="custom_color_inventory_bg"
            type="colorpicker"
            order="3102"
            description="Background">#323232</config>
    <config group="template_paper"
            name="custom_color_inventory_link"
            type="colorpicker"
            order="3103"
            description="Link color">rgba(255,255,255,0.45)</config>
    <config group="template_paper"
            name="custom_color_inventory_link_hover"
            type="colorpicker"
            order="3104"
            description="Link hover color">rgba(255,255,255,0.5)</config>
    <config group="template_paper"
            name="custom_color_inventory_link_active"
            type="colorpicker"
            order="3105"
            description="Link active color">rgba(255,255,255,0.7)</config>

    <config group="template_paper"
            type="divider"
            order="3200">Navbar / Mainmenu</config>
    <config group="template_paper"
            name="max_top_menu_items"
            type="text"
            description="Max number of items in Main Menu"
            order="3201">6</config>
    <config group="template_paper"
            name="enable_text_logo"
            type="radio"
            order="3202"
            values="1,0"
            description="Enable Logo text">0</config>
    <config group="template_paper"
            name="logo_text"
            type="text"
            order="3203"
            show="enable_text_logo|1"
            description="Logo text">paper</config>
    <config group="template_paper"
            name="navbar_sticky"
            type="radio"
            order="3204"
            values="1,0"
            description="Sticky navbar">1</config>
    <config group="template_paper"
            name="search_navbar"
            type="radio"
            order="3205"
            values="1,0"
            description="Show search in navbar">1</config>
    <config group="template_paper"
            name="custom_color_navbar_bg"
            type="colorpicker"
            order="3206"
            description="Background">#ffffff</config>
    <config group="template_paper"
            name="custom_color_navbar_link"
            type="colorpicker"
            order="3207"
            description="Link color">rgba(50,50,50,0.6)</config>
    <config group="template_paper"
            name="custom_color_navbar_link_hover"
            type="colorpicker"
            order="3208"
            description="Link hover color">rgba(50,50,50,0.8)</config>
    <config group="template_paper"
            name="custom_color_navbar_link_active"
            type="colorpicker"
            order="3209"
            description="Link active color">#38b7ea</config>

    <config group="template_paper"
            type="divider"
            order="3400">Footer</config>
    <config group="template_paper"
            name="footer_bg"
            type="colorpicker"
            order="3401"
            description="Background">#323232</config>
    <config group="template_paper"
            name="footer_blocks_bg"
            type="colorpicker"
            order="3401"
            description="Background of footer blocks">#444444</config>
    <config group="template_paper"
            name="footer_link"
            type="colorpicker"
            order="3402"
            description="Link color">rgba(255,255,255,0.45)</config>
    <config group="template_paper"
            name="footer_link_hover"
            type="colorpicker"
            order="3403"
            description="Link hover color">rgba(255,255,255,0.5)</config>
    <config group="template_paper"
            name="footer_link_active"
            type="colorpicker"
            order="3404"
            description="Link active color">rgba(255,255,255,0.7)</config>

    <config group="template_paper"
            type="divider"
            order="4000">Social links</config>
    <config group="template_paper"
            name="website_social"
            type="radio"
            order="4001"
            values="1,0"
            description="Show links">1</config>
    <config group="template_paper"
            name="website_social_t"
            type="text"
            order="4002"
            show="website_social|1"
            description="Twitter Link">https://twitter.com/IntelliantsLLC</config>
    <config group="template_paper"
            name="website_social_f"
            type="text"
            order="4003"
            show="website_social|1"
            description="Facebook Link">https://www.facebook.com/Intelliants</config>
    <config group="template_paper"
            name="website_social_g"
            type="text"
            order="4004"
            show="website_social|1"
            description="Google+ Link">https://plus.google.com/102500660503219569194/posts</config>
    <config group="template_paper"
            name="website_social_i"
            type="text"
            order="4005"
            show="website_social|1"
            description="LinkedIn Link">#</config>

    <config group="template_paper"
            name="ckeditor_css"
            type="hidden"
            description="CKEditor CSS"
            order="5000">ckeditor.css</config>

    <changeset>
        <menu position="account" status="active">account</menu>

        <block status="active" classname="box--border" position="right">common_statistics</block>
        <block status="active" classname="box--border" position="left">filters</block>

        <block status="active" position="flyout" header="1" sticky="1" collapsible="0">articles_archive</block>
        <block status="active" classname="b-top-cats" position="top_categories" header="0" sticky="1">top_categories</block>
        <block status="active" classname="b-sponsored" position="verytop" sticky="0" pages="index" collapsible="0">sponsored_articles</block>
        <block status="active" classname="b-staff-picks" position="verytop" sticky="0" pages="index" collapsible="0" title="Staff picks">sticky_articles</block>
        <block status="active" classname="b-latest" position="top" sticky="0" pages="index" collapsible="0" title="Latest additions">latest_articles</block>
    </changeset>

    <blocks>
        <block name="bottom_block"
               title="Bottom block position"
               position="bottom"
               header="1"
               collapsible="1"
               sticky="0"
               pages="index"
               status="active"
               type="html">
            <![CDATA[
<p>You can change this block in admin panel. Remember, if you change template, this block will be lost. We advise you to clone this block.</p>
<p>Ne lorem percipit efficiantur mei, ius ut simul vidisse. An vel probatus explicari appellantur. Has et comprehensam interpretaris, quo no inimicus maluisset temporibus. Ea mea quod incorrupte, brute laoreet at pri, eam antiopam honestatis efficiantur ea. Velit atomorum voluptaria ad nam, hinc aperiam accumsan ne est, ut dictas dissentias his.</p>
            ]]>
        </block>

        <block name="html_block1"
               title="HTML block #1"
               position="flyout"
               header="1"
               collapsible="0"
               sticky="1"
               order="99"
               status="active"
               type="html">
            <![CDATA[
<p>You can change this block in admin panel. Remember, if you change template, this block will be lost. We advise you to clone this block.</p>
            ]]>
        </block>
        <block name="footer1"
               title="About CMS"
               position="footer1"
               header="1"
               collapsible="0"
               sticky="1"
               status="active"
               type="html">
            <![CDATA[
<p>Subrion is a free open source content management system
that allows you to build websites for any purpose. Yes, from blog to corporate mega portal.</p>
<ul class="list-unstyled hidden">
    <li><span class="fa fa-phone"></span> 1-677-124-44227</li>
    <li><span class="fa fa-map-pin"></span> 437 S Olive St, Los Angeles</li>
    <li><span class="fa fa-clock-o"></span> Mon - Sat 8.00 - 18.00h</li>
</ul>
            ]]>
        </block>
        <block name="footer2"
               title="For users"
               position="footer2"
               header="1"
               collapsible="0"
               sticky="1"
               status="active"
               type="html">
            <![CDATA[
<p>It's done to focus on the content management process. Start it hassle-free within just a few minutes and take care of the content. It's easy!</p>
            ]]>
        </block>
        <block name="footer3"
               title="For developers"
               position="footer3"
               header="1"
               collapsible="0"
               sticky="1"
               status="active"
               type="html">
            <![CDATA[
<p>Forget the hours of programming simple things. Use Subrion framework API to add extra stuff using hooks, plugins, & packages.</p>
            ]]>
        </block>
        <block name="footer4"
               title="For designers"
               position="footer4"
               header="1"
               collapsible="0"
               sticky="1"
               status="active"
               type="html">
            <![CDATA[
<p>Simple templating engine and styles allows you to create any template you wish with just a few lines of code.</p>
            ]]>
        </block>
    </blocks>

    <phrases>
        <phrase category="frontend" key="login">Log in</phrase>
        <phrase category="frontend" key="register">Sign up</phrase>
        <phrase category="frontend" key="back_to_top">Back to top</phrase>
        <phrase category="frontend" key="admin_dashboard">Admin Dashboard</phrase>
        <phrase category="frontend" key="menu">Menu</phrase>
    </phrases>
</module>